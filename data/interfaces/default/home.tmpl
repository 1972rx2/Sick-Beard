<script>
\$.tablesorter.addParser({ 
    // set a unique id 
    id: 'eps', 
    is: function(s) { 
        // return false so this parser is not auto detected 
        return false; 
    }, 
    format: function(s) { 
        // format your data for normalization
        match = s.match(/^\<\!\-\-(.*)\-\-\>\<div.*$/)
        
        if (match[1] == "?")
            return -10;
        
        var nums = match[1].split(" / ");

        var finalNum = parseInt((nums[0]/nums[1])*100)*1000;
        if (finalNum > 0)
            finalNum += parseInt(nums[0]);

        return finalNum 
    }, 
    // set type, either numeric or text 
    type: 'numeric' 
}); 
 
\$.tablesorter.addParser({ 
    // set a unique id 
    id: 'quality', 
    is: function(s) { 
        // return false so this parser is not auto detected 
        return false; 
    }, 
    format: function(s) { 
        // format your data for normalization 
        return s.toLowerCase().replace('hd',3).replace('sd',1).replace('any',0).replace('best',2); 
    }, 
    // set type, either numeric or text 
    type: 'numeric' 
}); 
 
\$.tablesorter.addParser({ 
    // set a unique id 
    id: 'loadingNames', 
    is: function(s) { 
        // return false so this parser is not auto detected 
        return false; 
    }, 
    format: function(s) { 
        // format your data for normalization
        if (s.indexOf('Loading...') == 0)
        	return s.replace('Loading...','!!!');
        else if (s.indexOf('The ') == 0)
            return s.replace('The ', '')
        else if (s.indexOf('A ') == 0)
            return s.replace('A ', '')
        else
        	return s; 
    }, 
    // set type, either numeric or text 
    type: 'text' 
}); 
 
\$.tablesorter.addParser({ 
    // set a unique id 
    id: 'nextAirDate', 
    is: function(s) { 
        // return false so this parser is not auto detected 
        return false; 
    }, 
    format: function(s) { 
        // format your data for normalization
        if (s == '')
            return '9999-99-99';
        else
            return s; 
    }, 
    // set type, either numeric or text 
    type: 'text' 
}); 
 
\$.tablesorter.addParser({ 
    // set a unique id 
    id: 'active', 
    is: function(s) { 
        // return false so this parser is not auto detected 
        return false; 
    }, 
    format: function(s) { 
        // format your data for normalization
        if (s == '')
            return '~~';
        else
            return s; 
    }, 
    // set type, either numeric or text 
    type: 'text' 
}); 
 
\$(document).ready(function() 
{ 
    \$("#showListTable").tablesorter({
    	sortList: [[5,1],[1,0]],
    	headers: {
    		0: { sorter: 'nextAirDate'},
    		1: { sorter: 'loadingNames'},
    		3: { sorter: 'quality'},
            4: { sorter: 'eps' },
            5: { sorter: 'active' }
    	}
    }); 
});
</script>
